<li id="photo-<%= photo.id %>">
  <%= link_to gravatar_for(photo.user, size: 50), photo.user %>
  <span class="picture">
    <%= image_tag photo.picture.url if photo.picture? %>
  </span>
  <span class="title">
    <%= link_to photo.title, photo %>
    <%= render 'users/like_form'%>
  </span>
  <span class="title"><%= link_to photo.user.user_name, user_path(photo.user) %></span>
  <span class="timestamp">
    投稿時間 <%= time_ago_in_words(photo.created_at) %> ago.
    <% if current_user == photo.user %>
      <%= link_to "delete", photo, method: :delete,
          data: { confirm: "本当に削除しますか?" } %>
    <% end %>
  </span>
</li>
