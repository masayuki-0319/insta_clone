<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.user_name %></h1>
      <span><%= link_to "プロフィール画面", @user %></span>
      <span><b>いいね！</b> <%= @user.photo_likes.count %><b>件</b></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @like_photos.any? %>
      <ul class="users follow">
        <%#= render @like_photos %>
      </ul>
      <%#= will_paginate %>
    <% end %>
  </div>
</div>
